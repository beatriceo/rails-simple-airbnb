<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://picsum.photos/<%= rand(1000..2000) %>/<%= rand(1000..2000) %>/?random');"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h3><%= flat.name %></h3>
            </div>
            <p><%= flat.description %></p>
            <div class="flex">
              <div class="flex">
                <i class="fas fa-user"></i>&nbsp;<span><%= flat.number_of_guests %></span>
              </div>&nbsp;&nbsp;
              <div class="flex ml-3">
                <i class="fas fa-euro-sign"></i>&nbsp;<%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "ml-3 text-warning" %>
            <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-3 text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



